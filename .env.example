# Cloudflare AI Gateway Configuration
# Copy this file to .env and fill in your actual values

# AI Gateway Configuration
# Get these from your Cloudflare AI Gateway dashboard
# Format: https://gateway.ai.cloudflare.com/v1/{account_id}/{gateway_name}/compat
CLOUDFLARE_AI_GATEWAY_URL=https://gateway.ai.cloudflare.com/v1/YOUR_ACCOUNT_ID/YOUR_GATEWAY_NAME/compat
CLOUDFLARE_AI_GATEWAY_TOKEN=your-gateway-bearer-token

# LLM Provider API Keys
# Configure only the providers you want to use

# OpenAI (GPT models: gpt-5, gpt-5-mini, o3, o4-mini)
OPENAI_API_KEY=sk-proj-your-openai-api-key

# Anthropic (Claude models: claude-4-sonnet, claude-4-opus, claude-3.7-sonnet)
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key

# xAI (Grok models: grok-4-fast-reasoning, grok-2-1212, grok-2-vision-1212)
XAI_API_KEY=xai-your-xai-api-key

# Google AI Studio (Gemini models: gemini-2.5-pro, gemini-2.5-flash)
GOOGLE_AI_STUDIO_API_KEY=your-google-ai-studio-api-key

# Optional: Other providers
OPENROUTER_API_KEY=your-openrouter-api-key
CEREBRAS_API_KEY=your-cerebras-api-key
GROQ_API_KEY=your-groq-api-key

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# AI Gateway Settings
# The name of your AI Gateway in Cloudflare
CLOUDFLARE_AI_GATEWAY=vibesdk-gateway

# Sandbox Service Configuration
SANDBOX_SERVICE_API_KEY=your-sandbox-api-key
SANDBOX_SERVICE_TYPE=container
SANDBOX_SERVICE_URL=your-sandbox-url

# Database Configuration
# D1 database binding is configured in wrangler.toml

# OAuth Configuration (for authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Security
JWT_SECRET=your-jwt-secret-key
ENTROPY_KEY=your-entropy-key-for-encryption
SECRETS_ENCRYPTION_KEY=your-secrets-encryption-key

# Environment
ENVIRONMENT=development

# Templates Repository
TEMPLATES_REPOSITORY=https://github.com/cloudflare/vibesdk-templates

# Allowed Email (comma-separated, leave empty for all)
ALLOWED_EMAIL=

# Dispatch Namespace
DISPATCH_NAMESPACE=vibesdk-default-namespace

# Enable Read Replicas
ENABLE_READ_REPLICAS=true

# Sandbox Configuration
MAX_SANDBOX_INSTANCES=10
SANDBOX_INSTANCE_TYPE=standard

# Custom Domain Configuration
CUSTOM_DOMAIN=your-custom-domain.com
CUSTOM_PREVIEW_DOMAIN=preview.your-domain.com

# Allocation Strategy
ALLOCATION_STRATEGY=least-loaded

# GitHub Exporter
GITHUB_EXPORTER_CLIENT_ID=your-github-exporter-client-id
GITHUB_EXPORTER_CLIENT_SECRET=your-github-exporter-client-secret

# Cloudflare Access
CF_ACCESS_ID=your-cf-access-id
CF_ACCESS_SECRET=your-cf-access-secret

# Monitoring
SENTRY_DSN=your-sentry-dsn

# Cloudflare Images (optional)
USE_CLOUDFLARE_IMAGES=false

# Tunnel for Preview (optional)
USE_TUNNEL_FOR_PREVIEW=false

# Additional AI Proxy
AI_PROXY_JWT_SECRET=your-ai-proxy-jwt-secret

# Search API (optional)
SERPAPI_KEY=your-serpapi-key
